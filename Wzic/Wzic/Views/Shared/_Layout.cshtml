<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <link href="~/Content/homee.css" rel="stylesheet" />
    <link href="~/Content/font-awesome.min.css" rel="stylesheet" />
    <link href="~/Content/swiper.min.css" rel="stylesheet" />
    <link href="~/Content/slider.css" rel="stylesheet" />
    <link href="~/Content/songss.css" rel="stylesheet" />
    <link href="~/Content/index.css" rel="stylesheet" />
    <link href="~/Content/videos.css" rel="stylesheet" />
    @Scripts.Render("~/bundles/modernizr")
</head>
<body style="overflow-x:hidden">
    <div class="header">
        <span id="logo"><i class="fa fa-music"></i></span>
        <div id="search"><input type="text" id="inputSearch" placeholder="Input to search"> <span id="icon" class="fa fa-search"></span></div>
        <span id="login"><svg><rect> </rect></svg>Đăng nhập</span>
    </div>
    <ul class="menuBar">
        <li><i class="fa fa-home"></i>@Html.ActionLink("Home", "Index", "Home")</li>
        <li><i class="fa fa-headphones"></i>@Html.ActionLink("Songs", "Songs", "Home")</li>
        <li><i class="fa fa-user-circle"></i>@Html.ActionLink("Artists", "Artists", "Home")</li>
        <li><i class="fa fa-viadeo"></i>@Html.ActionLink("Videos", "Videos", "Home")</li>
    </ul>

    <div class="container body-content">
        @RenderBody()
    </div>

    <script src="~/Scripts/jquery-3.3.1.min.js"></script>
    <script src="~/Scripts/swiper.min.js"></script>
    <script src="~/Scripts/home.js"></script>
    <script src="~/Scripts/artists.js"></script>
    <script src="~/Scripts/song.js"></script>
    <script src="~/Scripts/videos.js"></script>
    @RenderSection("scripts", required: false)
</body>


<footer style="background:#2c3e50;">
    <hr />
    <p>&copy; @DateTime.Now.Year - Wzic</p>

</footer>
</html>
