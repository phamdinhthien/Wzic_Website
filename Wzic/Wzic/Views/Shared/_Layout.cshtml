            if (Session["User"] == null)
            {
                <ul>
                    <li id="menu_login">
                        <a id="login" href="@Url.Action("Login", "AccountGG")">Log In</a>
                    </li>
                </ul>
            }
            else
            {
                <ul>
                    <li id="menu_login">
                        <a id="login" href="#">@Session["User"]</a>
                        <ul>
                            <li id="sub_menu_login">
                                <a id="logout" href="@Url.Action("Logout", "AccountGG")">Log Out</a>
                        </ul>
                    </li>
                </ul>

            }
        }
        *@
        <div class="menu_login">
            @Html.Partial("_LoginPartial")
        </div>
        
    </div>
    <input type="checkbox" style="visibility:hidden" id="check"/>
    <div id="tonggle-menu"><label for="check"><i class="fa fa-bars" id="icon-menu"></i></label></div>
    <ul class="menuBar">
        <li><i class="fa fa-home"></i>@Html.ActionLink("Home", "Index", "Home")</li>
        <li><i class="fa fa-headphones"></i>@Html.ActionLink("Songs", "Songs", "Home")</li>
        <li><i class="fa fa-user-circle"></i>@Html.ActionLink("Artists", "Artists", "Home")</li>
        <li><i class="fa fa-play-circle"></i>@Html.ActionLink("Videos", "Videos", "Home")</li>
    </ul>
  

    <div class="container body-content">
        @RenderBody()
    </div>

    <script src="~/Scripts/jquery-3.3.1.min.js"></script>
    <script src="~/Scripts/swiper.min.js"></script>
    <script src="~/Scripts/home.js"></script>
    <script src="~/Scripts/artistss.js"></script>
    <script src="~/Scripts/songs.js"></script>

 
    @RenderSection("scripts", required: false)

</body>


<footer style="background:#2c3e50;">
    <hr />
    <p>&copy; @DateTime.Now.Year - Wzic</p>

</footer>
</html>
