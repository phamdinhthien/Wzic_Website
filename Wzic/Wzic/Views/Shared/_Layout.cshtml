<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <link href="~/Content/home.css" rel="stylesheet" />
    <link href="~/Content/font-awesome.min.css" rel="stylesheet" />
    <link href="~/Content/swiper.min.css" rel="stylesheet" />
    <link href="~/Content/artists.css" rel="stylesheet" />
    <link href="~/Content/song.css" rel="stylesheet" />
    <link href="~/Content/index_home.css" rel="stylesheet" />
    <link href="~/Content/videoss.css" rel="stylesheet" />
    <link href="~/Content/login_bootstrap.css" rel="stylesheet" />
    @Scripts.Render("~/bundles/modernizr")
</head>
<body style="overflow-x:hidden">
    <div class="header">
        <span id="logo"><i class="fa fa-music"></i></span>
        <div id="search"><input type="text" id="inputSearch" placeholder="Input to search"> <span id="icon" class="fa fa-search"></span></div>
