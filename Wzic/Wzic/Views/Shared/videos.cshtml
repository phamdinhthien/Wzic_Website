<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <link href="~/Content/videoss.css" rel="stylesheet" />
    <link href="~/Content/videoView.css" rel="stylesheet" />
    @Scripts.Render("~/bundles/modernizr")

</head>
<body style="overflow-x:hidden">
    <div class="menuCircle">

        <ul>
            <li>@Html.ActionLink("Home", "Index", "Home")</li>
            <li>@Html.ActionLink("Songs", "Songs", "Home")</li>
            <li>@Html.ActionLink("Artists", "Artists", "Home")</li>
            <li>@Html.ActionLink("Videos", "Videos", "Home")</li>
        </ul>
    </div>

    <div class="container body-content">
        @RenderBody()
    </div>


    <footer style="background:#2c3e50;">
        <hr />
        <p>&copy; @DateTime.Now.Year - Wzic</p>
    </footer>

    <script src="~/Scripts/jquery-3.3.1.min.js"></script>
    <script src="~/Scripts/videoss.js"></script>
    <script src="https://apis.google.com/js/client.js?onload=onClientLoad" type="text/javascript"></script>
    @RenderSection("scripts", required: false)
</body>

</html>