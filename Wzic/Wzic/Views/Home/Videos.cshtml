    ViewBag.Title = "Videos";
    Layout = "~/Views/Shared/videos.cshtml";
}

<div id="searchBar">
    <input id="query" type="text" placeholder="Type Something" />
    <button onclick="search()" class="search-btn">Search</button>
</div>
<div class="container-videos">
    <div id="list-of-videos">

    </div>
    <div id="container-show-video">
        <div class="brand">
            <h1>
                <span>W</span>
                <span>Z</span>
                <span>I</span>
                <span>C</span>
            </h1>
        </div>
        <div class="show-video">
            <iframe src="" frameborder="0" allowfullscreen id="bigFrame"></iframe>
            <div class="info-video">
                <hr>
                <h2></h2>
                <hr>
                <button type="submit" class="show-info">
                    <h3>Info</h3>
                </button>
                <div class="info"> </div>
            </div>
        </div>
    </div>
</div>

